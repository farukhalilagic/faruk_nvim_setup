{
        "diagnostic.errorSign": ">>",
        "diagnostic.warningSign": "--",
        "diagnostic.infoSign": "::",
        "diagnostic.hintSign": "::",
        "coc.preferences.colorSupport": true,
        "python.jediEnabled": true,
        "python.jediMemoryLimit": 4092,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "inlayHint.enable": false,

        "languageserver": {
                "hdlcc": {
                        "command": "hdl --lsp",
                        "filetypes": [
                                "v",
                                "hdl"
                        ],
                        "rootPatterns": [
                        ]
                },
		"clangd":
                  {
                          "command": "clangd",
                          "rootPatterns": ["compile_flags.txt",
                                          "compile_commands.json"],
                          "filetypes":["c",
                                          "cc",
                                          "cpp",
                                          "c++",
                                          "objc",
                                          "objcpp"]
                  },
                "haskell": {
                        "command": "hie-wrapper",
                        "rootPatterns": [
                                ".stack.yaml",
                                "cabal.config",
                                "package.yaml"
                        ],
                        "filetypes": [
                                "hs",
                                "lhs",
                                "haskell"
                        ],
                        "initializationOptions": {}
                },
                "digestif": {
                        "command": "digestif",
                        "filetypes": [
                                "tex",
                                "plaintex",
                                "context"
                        ]
                },
                "python": {
        "command": "pyright-langserver",
        "args": ["--stdio"],
        "filetypes": ["python"],
        "rootPatterns": [
                ".git",
                "pyproject.toml",
                "setup.py",
                "setup.cfg",
                "requirements.txt"
        ],
        "initializationOptions": {}
}
        }
}
