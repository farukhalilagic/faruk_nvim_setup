{
        "diagnostic.errorSign": ">>",
        "diagnostic.warningSign": "--",
        "diagnostic.infoSign": "::",
        "diagnostic.hintSign": "::",
        "coc.preferences.colorSupport": true,
        "python.jediEnabled": true,
        "python.jediMemoryLimit": 4092,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "inlayHint.enable": false,

        "languageserver": {
                "hdlcc": {
                        "command": "hdl --lsp",
                        "filetypes": [
                                "v",
                                "hdl"
                        ],
                        "rootPatterns": [
                        ]
                },
		"clangd":
                  {
                          "command": "clangd",
                          "rootPatterns": ["compile_flags.txt",
                                          "compile_commands.json"],
                          "filetypes":["c",
                                          "cc",
                                          "cpp",
                                          "c++",
                                          "objc",
                                          "objcpp"]
                  },
                "haskell": {
                        "command": "hie-wrapper",
                        "rootPatterns": [
                                ".stack.yaml",
                                "cabal.config",
                                "package.yaml"
                        ],
                        "filetypes": [
                                "hs",
                                "lhs",
                                "haskell"
                        ],
                        "initializationOptions": {}
                },
                "digestif": {
                        "command": "digestif",
                        "filetypes": [
                                "tex",
                                "plaintex",
                                "context"
                        ]
                },
                        "pyls": {
            "command": "pyls",
            "filetypes": [
                "python"
            ],
            "rootPatterns": [
                ".git"
            ],
            "settings": {
                "pyls.plugins.pyflakes.enabled": true,
                "pyls.plugins.pylint.enabled": false,
                "pyls.plugins.flake8.enabled": true
            }
        }
        },
}
